<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="./styles/style.css">
    <title>Book App</title>
</head>
<body>
    <header class="header">
        <div class="container ">
            <h1>Best Books!</h1>
            <div class="menu-icon">
                <i class="fas fa-align-justify"></i>
            </div>
        </div>
    </header>
    <main class="main">
        <section class="icon-items hide">
            <div class="container">
                <a href="../">Home</a>
                <a href="../searches/new">Search The Google Api Books</a>
            </div>
        </section>
        <h3 class="bg">Search Results</h3>
        
        <!-- ///////////////////////////////////////////////////////////// -->
        <!-- here is the data from the api -->
          <main class="container2">
              <% bookObjectsArray.forEach(bookobj=>{ %>
                <div class="book-object">

                    <img src="<%= bookobj.image %>">
                  
                  <h2>
                    <%=bookobj.title %>
                  </h2>

                  <h2>
                    <%=bookobj.authers%>
                  </h2>

                  <!-- <p>
                    <%=bookobj.description %>
                  </p> -->
                  <a href="/addbook" class="add-button">Add To My Book Shelf</a>
                </div>
                  <% }) %>
          </main>

        <!--//////////////////////////////////////////////////////////////////  -->
    </main>
  <footer class="footer">
        <div class="container">
            <i class="fas fa-envelope-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-github"></i>
            <i class="fab fa-linkedin"></i>
        </div>
    </footer>  

    <!-- links -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="../appshow.js"></script>
</body>
</html>