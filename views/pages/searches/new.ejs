<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="../styles/style.css">
    <title>Book App</title>
</head>
<body>
    <header class="header">
        <div class="container ">
            <h1>Best Books!</h1>
            <div class="menu-icon">
                <i class="fas fa-align-justify"></i>
            </div>
        </div>
    </header>
    <main class="main">
        <section class="icon-items hide">
            <div class="container">
                <a href="../">Home</a>
                <a href="../searches/new">Search The Google Api Books</a>
            </div>
        </section>
        <section class="book-cards">
            <div class="books-data container">
                <h3>Search By Titel Or Auther</h3>
            </div>
        </section>

        <section class="form-section container">
                  <form action="/searches" method="post" class="new__form">
                    <input
                      type="text"
                      placeholder="Search for a book"
                      name="keyword"
                      class="text__input"
                      required
                    />
                    <br />
              
                    <div class="radio__label">
                      <input
                        type="radio"
                        id="title"
                        name="choice"
                        value="intitle"
                        checked="checked"
                      />
                      <label for="title">Tilte</label><br />
                    </div>
              
                    <div class="radio__label">
                      <input type="radio" id="author" name="choice" value="inauthor" />
                      <label for="author">Author</label><br />
                    </div>

                    <input type="submit" value="Search The Google Api Books"  class="button-text"/>
                  </form>
        </section>
    </main>

        <!-- <div class="container">
            <div class="book-card">
              
            </div>
        </div> -->
  <footer class="footer">
        <div class="container">
            <i class="fas fa-envelope-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-github"></i>
            <i class="fab fa-linkedin"></i>
        </div>
    </footer>  

    <!-- links -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="../appnew.js"></script>
</body>
</html>